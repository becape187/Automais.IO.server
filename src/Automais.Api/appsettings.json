{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Ssl Mode=Require"
  },
  "Database": {
    "RootCertificatePath": "ca-certificate.crt"
  },
  "ChirpStack": {
    "ApiUrl": "${CHIRPSTACK_API_URL}",
    "ApiToken": "${CHIRPSTACK_API_TOKEN}"
  },
  "EMQX": {
    "BrokerUrl": "${EMQX_BROKER_URL}",
    "BrokerPort": 1883,
    "WebSocketPort": 8083,
    "Username": "${EMQX_USERNAME}",
    "Password": "${EMQX_PASSWORD}"
  },
  "Backup": {
    "StoragePath": "/backups/routers"
  },
  "RouterMonitoring": {
    "CheckIntervalSeconds": 10,
    "PingTimeoutMs": 3000
  },
  "VpnService": {
    "BaseUrl": "http://localhost:8000",
    "TimeoutSeconds": 30,
    "RetryCount": 3
  },
  "RouterOsWebSocket": {
    "WebSocketUrl": "ws://localhost:8765",
    "TimeoutSeconds": 30
  },
  "Email": {
    "Smtp": {
      "Host": "smtp.office365.com",
      "Port": 587,
      "Username": "noreply@automais.io",
      "Password": "${EMAIL_PASSWORD}",
      "UseSsl": true
    },
    "From": {
      "Address": "noreply@automais.io",
      "Name": "Automais.IO"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
